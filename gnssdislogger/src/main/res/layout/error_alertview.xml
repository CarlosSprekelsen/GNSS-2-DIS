<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error_friendly_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingBottom="22dp"
        android:textColor="#80000000"
        android:textSize="17sp" />

    <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/error_expand_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        expandableTextView:animAlphaStart="1"
        expandableTextView:animDuration="0"
        expandableTextView:collapseDrawable="@android:color/transparent"
        expandableTextView:expandDrawable="@android:color/transparent"
        expandableTextView:maxCollapsedLines="0">

        <TextView
            android:id="@id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:textColor="#666666"
            android:textSize="16sp" />

        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="1dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/toggle_expand" />
    </com.ms.square.android.expandabletextview.ExpandableTextView>

</LinearLayout>